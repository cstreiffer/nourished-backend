<html>
    <head>
        <style>
            /* .table td,
            .table th {
                font-size: 10px;
                font-family: "Arial";
                font-style: "normal";
                font-weight: "normal";
            } */
            hr {
                display: block;
                height: 1px;
                border: 0;
                border-top: 1px solid #ccc;
                margin: 1em 0;
                padding: 0;
            }
        </style>

       
        <body>
            <div style="width: 100%; margin: 1% 1% 1% 1%;">
                <div style="padding-left: 10px;"><h3>Weekly order report for <%= restaurantName %></h3></div>
                <div style="text-align: left; padding-left: 10px; width: 100%"></div>
                    <hr>
                        <table style="font-size: 6px; width: 100%">
                            <tbody>
                                <tr style="font-weight: bold;">                                    
                                   
                                    <td>Delivery date</td>                                  
                                    <td>Order</td>                                
                                    <td>Quantity</td>
                                    <td></td>
                                    <td>Total</td>
                                    <td>Dietary Restrictions</td>
                                    <td>Paystatus</td>
                                </tr>   
                                <% var deliveryDate, restaurant = null, timeslot = null;%>                         
                                <% orders.forEach( (record, idx) => {%>                            
                                     
                                        <% if ( record.type === "Order" ) { %>
                                            <tr>
                                                <td><%= moment(record.data.timeslot).format('MM/DD/YYYY h:mm a') %></td>                                                                                      
                                                <td><%= record.data.mealName %></td>
                                                <td><%= record.data.quantity %></td>
                                                <td></td>                                    
                                                <td>$<%= record.data.ordertotal %></td>
                                                <td><%= record.data.dietaryRestrictions %></td>                                            
                                                <td><%= record.data.payStatus %></td>                                    
                                            </tr>
                                        <% }  else if ( record.type === "TimeslotSummary" ) { %>
                                            <tr>
                                                <td></td>
                                                <td colspan=6">
                                                    <span style="display: block; height: 1px; border: 0; border-top: 1px solid #ccc; margin: 0.1em 0; padding: 0;"></span>
                                                </td>
                                            </tr>
                                            <tr>
                                                <td></td>                                                
                                                <td style="font-weight: bold">Total Qty: </td><td><%= record.totalSummaryQuantity %></td>
                                                <td style="font-weight: bold">Total Price: </td><td>$<%= record.totalSummaryPrice %></td>                                                
                                            </tr>                                        
                                            <tr>  
                                                <td></td>                                              
                                            </tr>
                                            <tr>    
                                                <td></td>                                            
                                            </tr>
                                        <% } %>                                      
                                <%  });%>
                            </tbody>
                        </table>
                </div>
            </div>
        </body>
    </head>
</html>